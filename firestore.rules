rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection
    match /users/{userId} {
      // Users can read their own profile
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Users can update their own profile
      allow update: if request.auth != null && request.auth.uid == userId;
      
      // New users can create their own profile during signup
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Anyone (even unauthenticated) can view nanny profiles (for browsing)
      allow read: if resource.data.userType == 'nanny';
    }
    
    // Bookings collection
    match /bookings/{bookingId} {
      // Users can view their own bookings
      allow read: if request.auth != null && 
                     (request.auth.uid == resource.data.parent_id || 
                      request.auth.uid == resource.data.nanny_id);
      
      // Parents can create bookings
      allow create: if request.auth != null && 
                       request.auth.uid == request.resource.data.parent_id;
      
      // Involved users can update bookings
      allow update: if request.auth != null && 
                       (request.auth.uid == resource.data.parent_id || 
                        request.auth.uid == resource.data.nanny_id);
    }
    
    // Reviews collection
    match /reviews/{reviewId} {
      // Anyone can read reviews
      allow read: if true;
      
      // Parents can create reviews for their bookings
      allow create: if request.auth != null && 
                       request.auth.uid == request.resource.data.parent_id;
    }
  }
}

